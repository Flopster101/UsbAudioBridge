<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USB Audio Bridge"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Enable USB Gadget"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnStartAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Start Audio Capture"
        android:enabled="false"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textBufferValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buffer Size: 4800 frames (~100ms)"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderBuffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="480"
        android:valueTo="9600"
        android:value="4800"
        android:stepSize="480"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Log:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <ScrollView
        android:id="@+id/scrollLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:padding="8dp">
        <TextView
            android:id="@+id/textLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:textColor="#00FF00"
            android:text=""/>
    </ScrollView>

</LinearLayout>
